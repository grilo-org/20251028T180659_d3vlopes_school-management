{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "rootDirs": ["src", "__tests__"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["src/*"],
      "@/__tests__/*": ["./__tests__/*"]
    }
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules"]
}
